<h1 class="title">All microposts</h1> 

<% if logged_in? %>
  <%= link_to "Create a Post", new_micropost_path %>
<% end %>
<%= form_for(@micropost) do |f| %>
<div class="field">
    <%= f.text_area :title, placeholder: "Compose new micropost..." %>
  </div>
  <div class="field">
    <%= f.text_area :content, placeholder: "Compose new micropost..." %>
  </div>
  <%= f.submit "Post", class: "btn btn-primary" %>
<% end %>

<ul>
 <% @microposts.each do |micropost| %> 
 <li> 
 <article class="message is-dark"> 
 <div class="message-header"><p><%= micropost.title %></p> </div>
  <div class="message-body"> <p><%= micropost.content %></p> 
  <div class="author is-italic"> 
  	<% if logged_in? %> 
  <% @user = User.find(micropost.user_id) %> 
  <p>By: <%= @user.name %></p>
   <% end %> 
  </div> 
  </div>
   </article>
    <br> 
  </li> 
  <% end %>
  
   </ul>